<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Condominios</title>
    <script type="text/javascript" src="/jquery.js"></script>
    <script type="text/javascript" src="/chosen.js"></script>
    <link rel="stylesheet" type="text/css" href="/chosen.css">
    <link rel="stylesheet" type="text/css" href="/style.css">


</head>

<body>
    <div class="container">
        <div class="box">
            <div style="text-align: center"><b>Condominíos</b></br></div>
            <form method="get" action='/pesquisar/' id="formSearch">
                <table>
                    <tr>
                        <td>
                            <select required name="NameCondos" class="NameCondos">
                                <option value="0" />
                                <% if(typeof condos != 'undefined'){
                                    condos.forEach(condominium => {%>
                                <option value=<%= condominium.id %>> <%= condominium.name %></option>
                                <%  })}  %>
                            </select>
                        </td>
                        <td>
                            <input type="submit" value="Buscar" />
                        </td>
                    </tr>
                </table>
            </form>
            <form class="condosForm" method="post" action="/atualizar">
                <% if(typeof condominium != 'undefined'){
                    condominium.forEach(cnd => { %>
                <table>
                    <tr>
                        <td>Nome:</td>
                        <td><input name="name" type="text" id="condosInput" value="<%= cnd.name %>" disabled /></td>
                    </tr>
                    <tr>
                        <td>Endereço:</td>
                        <td><input name="addres" type="text" id="condosInput" value="<%= cnd.addres %>" disabled /></td>
                    </tr>
                    <tr>
                        <td>CNPJ:</td>
                        <td><input name="cnpj"type="text" id="condosInput" value="<%= cnd.cnpj %>" disabled /></td>
                    </tr>
                    <tr>
                        <td><input type="submit" id="btnEdit" value="Editar" /></td>
                        <td><button id="btnAdd">Adicionar novo</button></td>
                    </tr>
                </table>
                <input name="id"type="text" style="display:none" id="condosInput" value="<%= cnd.id %>" disabled />
                <% })} %>   
            </form>
        </div>
    </div>
    <script type="text/javascript" src="/style.js"></script>
</body>

</html>